/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.topics-main {
  height: 100%;
}
.top-bar {
  height: 45px;
  background: #353535;
  width:100%;
  position: fixed;
  top:0;
  z-index:1;
}

.tab_text{
  font-size: 20px;
  color: white;
}

.text_text{
  display: flex;
  flex-direction: row;
  margin: 50px 0 -40px 0;
  padding: 5px 0 5px 0;
  width:100%;
  height: 120px;
  border: 1px solid #353535;
}

.part_icon{
  width: 20px;
  height: 20px;
}

.click{
  width: 22px;
  height: 22px;
}

.part_info{
  display: flex;
  flex-direction: row;
}